.cal-event-date-suggestion
  .form-group
    .input-group
      span.input-group-addon
        i.mdi.mdi-calendar-clock
      .col-xs-12.col-md-4
        .form-group
          .fg-line
            input.input.form-control.date(type="text", size="10", ng-model="ctrl.event.start", data-autoclose="1", data-start-week="1", data-date-format="{{::ctrl.dateFormat}}", placeholder="{{ 'Start date' | translate }}", ng-change="ctrl.onStartDateChange()", ng-blur="ctrl.dateOnBlurFn()", bs-datepicker, aria-expanded="false", cal-date-to-moment)
          .fg-line(ng-if='!ctrl.allDay')
            input.input.form-control(type="text", size="10", ng-model="ctrl.event.start", data-autoclose="0", placeholder="{{ 'Time' | translate }}", ng-change="ctrl.onStartDateChange()", ng-blur="ctrl.dateOnBlurFn()", lng-clockpicker, lng-clockpicker-options="{twelvehour: !ctrl.use24hourFormat}", aria-expanded="false", ng-disabled="ctrl.allDay")
          .fg-line(ng-if='ctrl.allDay')
            input.input(type="text", size="10", class="form-control", ng-model="ctrl.previousStart", data-autoclose="0", placeholder="{{ 'Time' | translate }}", ng-change="ctrl.onEndDateChange()", aria-expanded="false", ng-disabled="ctrl.allDay", ng-blur="ctrl.dateOnBlurFn()", lng-clockpicker, lng-clockpicker-options="{twelvehour: !ctrl.use24hourFormat}")
      .col-xs-12.col-md-4
        .form-group
          .fg-line
            input.input.form-control.date(type="text", size="10", class="form-control", ng-model="ctrl.event.end", data-autoclose="1", data-start-week="1", data-date-format="{{::ctrl.dateFormat}}", data-min-date="{{ctrl.getMinDate()}}", placeholder="{{ 'End date' | translate }}", ng-change="ctrl.onEndDateChange()", aria-expanded="false", ng-blur="ctrl.dateOnBlurFn()", bs-datepicker, cal-date-to-moment, cal-friendlify-end-date, data-is-all-day="ctrl.allDay")
          .fg-line(ng-if='!ctrl.allDay')
            input.input(type="text", size="10", class="form-control", ng-model="ctrl.event.end", data-autoclose="0", placeholder="{{ 'Time' | translate }}", ng-change="ctrl.onEndDateChange()", aria-expanded="false", ng-disabled="ctrl.allDay", ng-blur="ctrl.dateOnBlurFn()", lng-clockpicker, lng-clockpicker-options="{twelvehour: !ctrl.use24hourFormat}")
          .fg-line(ng-if='ctrl.allDay')
            input.input(type="text", size="10", class="form-control", ng-model="ctrl.previousEnd", data-autoclose="0", placeholder="{{ 'Time' | translate }}", ng-change="ctrl.onEndDateChange()", aria-expanded="false", ng-disabled="ctrl.allDay", ng-blur="ctrl.dateOnBlurFn()", lng-clockpicker, lng-clockpicker-options="{twelvehour: !ctrl.use24hourFormat}")
      .col-xs-12.col-md-4
        .form-group.nopadding
          .fg-line
            .checkbox.allday
              label
                input(type="checkbox", ng-model='ctrl.allDay', ng-change="ctrl.setEventDates();")
                i.input-helper
                span {{ 'All day' | translate }}
      .col-xs-12
        .form-group
          .input-group.full-width
            .fg-line
              textarea.form-control(type="text", ng-model='ctrl.event.comment', rows='3', placeholder="{{ 'Comment...' | translate }}")